# ===========================================
# LLM Configuration
# ===========================================
DEEPSEEK_KEY=                           # Required: DeepSeek API key
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_CHAT_MODEL=deepseek-chat
DEEPSEEK_REASONER_MODEL=deepseek-reasoner
LLM_TEMPERATURE=0.5                     # 0.0-1.0, lower = more deterministic (0.5 works best)
USE_REASONER=true                       # Use deepseek-reasoner model for complex tasks

# ===========================================
# Processing Configuration
# ===========================================
MAX_CONCURRENT_TASKS=20                 # Semaphore limit for parallel processing
MAX_RETRIES=0                           # Module doc retries (set to 1 to enable review)
RETRIEVE_TIMEOUT=10                     # Code retrieval timeout (seconds)
REVIEW_TIMEOUT=60                       # LLM review timeout (seconds)
MAX_PLAN_RETRIES=2                      # Plan review retries
SCC_MAX_RETRIES=3                       # SCC context retries
PARALLEL_EXECUTION=true                 # Enable parallel processing
ENABLE_LOGGING=true                     # Enable logging

# ===========================================
# Output Configuration
# ===========================================
OUTPUT_DIR=./output                     # Output directory for generated docs

# ===========================================
# Embedding Configuration (for RAG)
# ===========================================
OPENAI_API_KEY=                         # Required for RAG: OpenAI API key for embeddings
EMBEDDING_MODEL=text-embedding-3-small  # OpenAI embedding model
EMBEDDING_DIMENSIONS=1536               # Embedding vector dimensions
MAX_CHUNK_TOKENS=2000                   # Maximum tokens per chunk for embedding
CROSS_ENCODER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# ===========================================
# Qdrant Configuration (Vector Database)
# ===========================================
QDRANT_URL=http://localhost:6333        # Qdrant server URL
QDRANT_API_KEY=                         # Optional: Qdrant API key (for cloud)
COLLECTION_NAME=codebase_chunks         # Default collection name
PARENT_COLLECTION_NAME=module_docs_parents   # Parent docs collection
CHILD_COLLECTION_NAME=code_chunks_children   # Child chunks collection

# ===========================================
# RAG Configuration
# ===========================================
CHUNK_SIZE=512                          # Token size for code chunks
CHUNK_OVERLAP=50                        # Overlap between chunks
RAG_TOP_K_PARENTS=3                     # Number of parent docs to retrieve
RAG_TOP_K_CHILDREN=5                    # Number of child chunks per parent
RAG_MAX_TOOL_ITERATIONS=3               # Max agentic tool iterations
SAME_FOLDER_BOOST=1.5                   # Relevance boost for same folder
SAME_FILE_BOOST=2.0                     # Relevance boost for same file
TEST_PENALTY=0.01                       # Penalty for test files in retrieval
USE_HYBRID_RAG_REASONER=true            # Use hybrid RAG with reasoner model